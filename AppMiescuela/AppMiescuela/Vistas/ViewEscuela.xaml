<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMiescuela.Vistas.ViewEscuela">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Mis Materias" Grid.Column="0" Grid.Row="0"/>
            <Button x:Name="btnAgregarMateria" Style="{StaticResource btnGuardar}" Text="Agregar Materia" Grid.Column="1" Grid.Row="0"/>
            <ListView x:Name="lstMaterias" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"></ListView>
            <Label Text="Mis Compañeros" Grid.Column="0" Grid.Row="2"/>
            <Button x:Name="btnAgregarCompaniero" Style="{StaticResource btnGuardar}" Text="Agregar Compañero" Grid.Column="1" Grid.Row="2"/>
            <ListView x:Name="lstCompanieros" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"></ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>